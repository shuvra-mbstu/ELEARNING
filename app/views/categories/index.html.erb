<div class="container align-items-center">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <h2 class="table-title__text">All Categories</h2>
      </div>
    </div>
    <table class="table table-striped table-hover" id="categories">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created On</th>
          <th>Total Videos</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: :category, collection: @categories %>
      </tbody>
    </table>
    <% if logged_in? && current_user.admin %>
      <div id="new-category">
        <%= link_to t('button.new', resource: humanize(Category)),
                    new_category_path,
                    class: "btn btn-lg btn-outline-success btn-bottom",
                    remote: true %>
      </div>
    <% end %>
  </div>
</div>
