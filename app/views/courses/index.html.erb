<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Videos</h1>
  </div>
</section>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-3">
      <div class="card course-card">
        <% if current_user.present? %>
          <p class="lead">
            <%= link_to 'Upload Videos', 
                        new_user_course_path(current_user.id),
                        class: "btn btn-primary btn-lg" %>
          </p>
        <% end %>
        <div class="card-header course-card__header"><i class="fa fa-list"></i> Categories</div>
        <ul class="list-group category_block">
          <%= link_to 'All Videos', courses_path, remote: true, class: "list-group-item" %>
          <% @categories.each do |category| %>
            <%= link_to category.name,
                        courses_path(category_id: category.id),
                        remote: true,
                        class: "list-group-item" %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col" id="courses-view">
      <%= render 'courses/course', courses: @courses %>
    </div>
  </div>
</div>
