<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center title"><%= t('button.edit', resource: t('views.shared.profile')) %></h1>
      <br>
      <%= render 'form', user: @user %>
      <%= link_to t('button.delete', resource: t('views.shared.account')),
                  user_path(@user),
                  method: :delete,
                  data: { confirm: t('action.confirm') },
                  class: "button btn btn-danger btn-bottom" %>
    </div>
  </div>
</div>
